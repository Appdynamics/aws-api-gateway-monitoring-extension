<monitor>
    <apiName>AWSAPIGatewayMonitor</apiName>
    <type>managed</type>
    <enabled>true</enabled>
    <description>Monitors AWS API Gateway server</description>
    <monitor-configuration>
    </monitor-configuration>
    <monitor-run-task>
        <apiName>APIGatewayMonitor Run Task</apiName>
        <display-apiName>APIGatewayMonitor Run Task</display-apiName>
        <description>APIGatewayMonitor Run Task</description>
        <type>java</type>
        <execution-style>periodic</execution-style>
        <execution-frequency-in-seconds>60</execution-frequency-in-seconds>
        <execution-timeout-in-secs>60</execution-timeout-in-secs>
        <task-arguments>
            <!-- config file-->
            <argument apiName="config-file" is-required="true" default-value="monitors/AWSAPIGatewayMonitor/config.yml" />
        </task-arguments>
        <java-task>
            <classpath>aws-api-gateway-monitoring-extension.jar</classpath>
            <impl-class>com.appdynamics.extensions.aws.apigateway.APIGatewayMonitor</impl-class>
        </java-task>
    </monitor-run-task>
</monitor>
